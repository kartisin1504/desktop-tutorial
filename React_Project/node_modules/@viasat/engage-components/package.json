{
  "name": "@viasat/engage-components",
  "version": "4.0.32",
  "description": "Engage platform reusable components and utilities",
  "main": "./lib/index.js",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git@git.viasat.com:VDUB/engage-components.git"
  },
  "publishConfig": {
    "registry": "https://artifactory.viasat.com/artifactory/api/npm/vdub-npm-local/"
  },
  "scripts": {
    "preversion": "npm run build && npm run test",
    "postversion": "npm publish",
    "postpublish": "git push --follow-tags",
    "storybook": "start-storybook -s ./public -p 6007",
    "start": "webpack --watch --config webpack.config.js --mode production",
    "build": "webpack --config webpack.config.js --mode production",
    "deploy-storybook": "build-storybook -o .storybook/build && storybook-to-ghpages --existing-output-dir=.storybook/build",
    "test": "jest --coverage",
    "visual-regression": "jest --config ./.storybook/jest.config.js",
    "test:watch": "jest --watch",
    "test:updateSnapshot": "jest --updateSnapshot",
    "lint": "eslint --ext .js --ext .jsx src",
    "format": "prettier '{,!(node_modules|lib|coverage|report)/**/}*.+(js|jsx|json)' --write",
    "jscpd": "jscpd ./src",
    "sonar": "node ./scripts/sonarqube.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint && npm run jscpd && npm run test"
    }
  },
  "jscpd": {
    "threshold": 0,
    "reporters": [
      "json",
      "html",
      "consoleFull",
      "badge"
    ],
    "ignore": [
      "**/__snapshots__/**",
      "**/__tests__/**",
      "**/__stories__/**"
    ],
    "absolute": true,
    "gitignore": true
  },
  "jest-junit": {
    "outputDirectory": "./coverage",
    "outputName": "junit.xml"
  },
  "author": "Viasat",
  "license": "UNLICENSED",
